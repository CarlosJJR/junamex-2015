<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/color_primary"
            android:gravity="center_vertical">

            <include layout="@layout/toolbar"/>

            <TextView
                android:id="@+id/people_name"
                android:layout_width="match_parent"
                android:layout_height="?attr/listPreferredItemHeightLarge"
                android:textColor="@color/white"
                android:layout_marginLeft="56dp"
                android:layout_marginStart="56dp"
                android:padding="@dimen/activity_vertical_margin"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_gravity="bottom"
                android:textSize="24sp"/>

        </LinearLayout>

    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/activity_vertical_margin">

            <RelativeLayout
                android:id="@+id/people_district"
                android:layout_width="match_parent"
                android:layout_height="?attr/listPreferredItemHeight"
                android:gravity="center_vertical"
                android:visibility="gone">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/district"/>

                <TextView
                    android:id="@+id/people_district_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="56dp"
                    android:layout_marginStart="56dp"
                    android:textColor="@color/secondary_text_color"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/people_phone"
                android:layout_width="match_parent"
                android:layout_height="?attr/listPreferredItemHeight"
                android:gravity="center_vertical"
                android:visibility="gone">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/phone"/>

                <TextView
                    android:id="@+id/people_phone_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="56dp"
                    android:layout_marginStart="56dp"
                    android:textColor="@color/secondary_text_color"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/people_email"
                android:layout_width="match_parent"
                android:layout_height="?attr/listPreferredItemHeight"
                android:gravity="center_vertical"
                android:visibility="gone">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/email"/>

                <TextView
                    android:id="@+id/people_email_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="56dp"
                    android:layout_marginStart="56dp"
                    android:textColor="@color/secondary_text_color"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/people_facebook"
                android:layout_width="match_parent"
                android:layout_height="?attr/listPreferredItemHeight"
                android:gravity="center_vertical"
                android:visibility="gone">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/facebook"/>

                <TextView
                    android:id="@+id/people_facebook_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="56dp"
                    android:layout_marginStart="56dp"
                    android:textColor="@color/secondary_text_color"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/people_notes"
                android:layout_width="match_parent"
                android:layout_height="?attr/listPreferredItemHeight"
                android:gravity="center_vertical"
                android:visibility="gone">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/notes"/>

                <TextView
                    android:id="@+id/people_notes_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="56dp"
                    android:layout_marginStart="56dp"
                    android:textColor="@color/secondary_text_color"/>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>