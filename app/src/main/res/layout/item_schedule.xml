<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="?attr/listPreferredItemHeightLarge"
    android:padding="@dimen/activity_vertical_margin">

    <mx.mobile.utils.TextViewFont
        android:id="@+id/schedule_time"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:fontName="Roboto-Medium.ttf"
        android:textStyle="bold"
        android:textSize="18sp"/>

    <Space android:layout_height="match_parent"
        android:layout_width="@dimen/activity_vertical_margin"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cardview_light_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <mx.mobile.utils.TextViewFont
                android:id="@+id/schedule_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:fontName="Roboto-Medium.ttf"
                android:textStyle="bold"
                android:textColor="@color/black_87"/>

            <mx.mobile.utils.TextViewFont
                android:id="@+id/schedule_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:fontName="Roboto-Medium.ttf"
                android:textColor="@color/black_54"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

</LinearLayout>